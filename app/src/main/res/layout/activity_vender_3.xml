<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/machupichu2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porfavor selecciona las siguientes opciones para que puedan encontrar más rápido tu producto"
            android:fontFamily="@font/aleo_bold"
            android:textSize="18sp"
            android:textColor="@color/blanco"
            android:shadowColor="@color/negro"
            android:shadowRadius="10"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="30dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="15dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp" >

                        <TextView
                            android:id="@+id/tvDepartamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:text="Departamento"
                            android:textSize="15sp"
                            android:fontFamily="@font/hind"
                            android:drawableStart="@drawable/ic_peru"
                            android:gravity="center"
                            android:textColor="@color/blanco"
                            android:layout_marginHorizontal="15dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDepartamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="15dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp" >

                        <TextView
                            android:id="@+id/tvProvincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:text="Provincia"
                            android:fontFamily="@font/hind"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_peru"
                            android:textColor="@color/blanco"
                            android:layout_marginHorizontal="15dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvProvincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="15dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp" >

                        <TextView
                            android:id="@+id/tvDistrito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:text="Distrito"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:fontFamily="@font/hind"
                            android:drawableStart="@drawable/ic_peru"
                            android:textColor="@color/blanco"
                            android:layout_marginHorizontal="15dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDistrito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="15dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp" >

                        <TextView
                            android:id="@+id/tvSubcategoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:text="Subcategoria"
                            android:fontFamily="@font/hind"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_ico_recurso_2"
                            android:textColor="@color/blanco"
                            android:layout_marginHorizontal="15dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSubcategoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="15dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp" >

                        <TextView
                            android:id="@+id/tvProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:text="Producto"
                            android:gravity="center"
                            android:fontFamily="@font/hind"
                            android:textSize="15sp"
                            android:drawableStart="@drawable/ic_ico_recurso_1"
                            android:textColor="@color/blanco"
                            android:layout_marginHorizontal="15dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivContinuar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="50dp"
                    android:background="@drawable/boton_flecha"
                    android:fontFamily="@font/aleo_bold"
                    android:padding="12dp"
                    android:src="@drawable/ic_derecha"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/color20"
                    android:tint="@color/dorado1" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatosNaturalActivity"
    android:theme="@style/Material"
    android:background="@color/color20"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recuperar mi cuenta"
                android:fontFamily="@font/hind_medium"
                android:textColor="@color/blanco"
                android:layout_marginTop="60dp"
                android:background="#1a1a1a"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresar el código ####"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:background="@color/color2"
                    android:textColor="@color/negro"
                     />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/negro"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nueva contraseña"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:background="@color/color2"
                    android:textColor="@color/negro"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/negro">



                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese otra vez la nueva contraseña"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:background="@color/color2"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:background="@drawable/boton7"
                android:textColor="@color/blanco"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/hind"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:id="@+id/btnaceptar"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor haz click en cualquiera de las opciones"
        android:layout_marginStart="25dp"
        android:textAlignment="center"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/marron1"
        android:layout_marginBottom="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/flayComprar"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp" >



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COMPRAR"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="30dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="70dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"></TextView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginVertical="15dp">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="92dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            android:padding="20dp"
                            android:src="@drawable/ic__comprar2" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flayVender"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VENDER"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="30dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="80dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginVertical="15dp" >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="92dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            android:padding="20dp"
                            android:src="@drawable/ic__121_preview_rev_1" />


                    </LinearLayout>

                </FrameLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/isotipo"
                    android:tint="@color/dorado1"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="200dp"></ImageView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>

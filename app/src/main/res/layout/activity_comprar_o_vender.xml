<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/machupichu2"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Porfavor seleccione una de las opciones."
            android:fontFamily="@font/aleo_bold"
            android:textSize="15sp"
            android:textColor="@color/marron1"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:shadowColor="@color/negro"
            android:layout_marginTop="45dp"
            android:id="@+id/tvSubtitulo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/flayComprar"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp" >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginVertical="15dp" >



                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="92dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            android:padding="20dp"
                            android:src="@drawable/ic_ico_carrito2" />



                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flayVender"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginVertical="15dp" >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="92dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            android:padding="20dp"
                            android:src="@drawable/ic_ico_dolar2" />


                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:fitsSystemWindows="true"
    tools:context=".Comprar22Activity" >

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/tvNombreProveedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carouselView"
        android:text="Nombre del proveedor"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/marron"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvRuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUC: 012345678912"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/gris"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_below="@id/tvNombreProveedor"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp" />

    <LinearLayout
        android:id="@+id/llayMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/boton_categorias"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_below="@id/tvRuc" >

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:ems="10"
            android:fontFamily="@font/aleo_bold"
            android:hint="Escríbele un mensaje a este proveedor"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="15sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar mensaje"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/marron"
            android:textAllCaps="false"
            android:background="@drawable/boton_amarillo"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnDisponibilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Sigue disponible?"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/blanco"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:background="@drawable/boton_categorias"
        android:layout_below="@id/llayMensaje"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp" />

    <Button
        android:id="@+id/btnComprar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lo quiero comprar ahora"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/blanco"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:background="@drawable/boton_categorias"
        android:layout_below="@id/btnDisponibilidad"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material"
    android:gravity="center"
    android:background="@mipmap/machupichu2" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:text="En este apartado te mostraremos las novedades del día a día, haz click en la sección de tu preferencia"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="textStart"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayGanaderia"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivGanaderia"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@mipmap/ganaderia_noticias"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayPesca"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivPesca"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@mipmap/pesca_noticias"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayMaquinaria"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivMaquinaria"
                        android:layout_width="75dp"
                        android:layout_gravity="center"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@mipmap/maquinaria_noticias"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayInsumos"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"

                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivInsumos"
                        android:layout_width="75dp"
                        android:layout_gravity="center"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@mipmap/maquinaria_noticias"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayPesticidas"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivPesticidas"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@mipmap/pesticidas_noticias"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayFertilizantes"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivFertilizantes"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@mipmap/fertilizantes_noticias"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

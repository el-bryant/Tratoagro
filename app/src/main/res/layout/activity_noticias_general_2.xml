<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material"
    android:gravity="center"
    android:background="@mipmap/machupichu2" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayGanaderia"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOTICIAS                                  GANADERIA"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="12sp"
                        android:textColor="@color/blanco"></TextView>

                    <ImageView
                        android:id="@+id/ivGanaderia"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notiganaderia"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayPesca"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOTICIAS                                                PESCA"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="12sp"
                        android:textColor="@color/blanco"></TextView>

                    <ImageView
                        android:id="@+id/ivPesca"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_notipesca"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayMaquinaria"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOTICIAS                        MAQUINARIA"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="12sp"
                        android:textColor="@color/blanco"></TextView>

                    <ImageView
                        android:id="@+id/ivMaquinaria"
                        android:layout_width="75dp"
                        android:layout_gravity="center"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_notimaquin"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayInsumos"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOTICIAS                                        INSUMOS"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="12sp"
                        android:textColor="@color/blanco"></TextView>

                    <ImageView
                        android:id="@+id/ivInsumos"
                        android:layout_width="75dp"
                        android:layout_gravity="center"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_notiinsumo"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayPesticidas"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOTICIAS                                   PESTICIDAS"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="12sp"
                        android:textColor="@color/blanco"></TextView>

                    <ImageView
                        android:id="@+id/ivPesticidas"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_notipesticidas"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayFertilizantes"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOTICIAS                           FERTILIZANTES"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="12sp"
                        android:textColor="@color/blanco"></TextView>

                    <ImageView
                        android:id="@+id/ivFertilizantes"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_notifertilizantes"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/machupichu2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ya casi estas listo para que seas parte de esta espacio virtual, porfavor crea un usuario y contraseña para que puedas acceder a lo que tenemos preparado para tí"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/marron1"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/negro"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundMode="none" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tietUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuario"
                        android:textColorHint="@color/negro"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="15sp"
                        android:drawableTint="@color/rojo"
                        android:textColor="@color/blanco"
                        android:drawableEnd="@drawable/persona1"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/negro"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/rojo"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundMode="none" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tietClave1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:textColor="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="15sp"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/negro"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/rojo"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundMode="none" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tietClave2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Repetir Contraseña"
                        android:textColor="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:textSize="15sp"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnListo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Listo"
                    android:background="@drawable/boton_rojo"
                    android:textColor="@color/dorado1"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:paddingHorizontal="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_gravity="center" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
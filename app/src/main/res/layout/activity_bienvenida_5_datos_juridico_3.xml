<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material"
    android:background="@color/color20" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ya casi estas listo para que seas parte de esta espacio virtual, porfavor crea un usuario y contraseña para que puedas acceder a lo que tenemos preparado para tí"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/negro"
        android:layout_marginBottom="20dp"
        android:gravity="start" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp"
        android:src="@drawable/ic_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="30dp" >


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Usuario"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:background="@color/color20"
                    android:textColor="@color/blanco"
                    android:drawableTint="#1a1a1a"
                    android:drawableEnd="@drawable/persona1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/negro" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietClave1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:background="@color/color20"
                    android:drawableTint="@color/negro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/negro" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietClave2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Repetir Contraseña"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:background="@color/color20"
                    android:drawableTint="@color/verde" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnaceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listo"
                android:background="@drawable/boton3"
                android:textColor="@color/dorado1"
                android:layout_marginTop="130dp"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/aleo_bold"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_ico_recurso_2"
                android:drawablePadding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp" >


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
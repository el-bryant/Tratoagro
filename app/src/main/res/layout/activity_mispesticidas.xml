<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/color20"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/boton7"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="15dp"
            android:src=""
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color2"
                android:fontFamily="@font/aleo_bold"
                android:text="NOMBRE DE LA PER. NAT. O JUR."
                android:textAlignment="center"
                android:textColor="@color/negro"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color20"
                android:textColor="@color/negro"
                android:text="COLOCAR MARCA"
                android:fontFamily="@font/aleo_bold"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color2"
                    android:textColor="@color/negro"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:text="PRECIO"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color20"
                    android:textColor="@color/negro"
                    android:textAlignment="center"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:text="CANT."
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÑADIR DESCRIPCIÓN"
                    android:background="@drawable/botonnegro"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:textAllCaps="false"
                    android:paddingHorizontal="30dp"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
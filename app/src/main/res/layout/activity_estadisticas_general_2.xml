<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flayGanaderia"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTADISTICAS                              GANADERIA"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="12sp"
                            android:textColor="@color/blanco"></TextView>

                        <ImageView
                            android:id="@+id/ivGanaderia"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_esganaderia" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flayPesca"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boton_rojo">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTADISTICAS                                              PESCA"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="12sp"
                            android:textColor="@color/blanco"></TextView>

                        <ImageView
                            android:id="@+id/ivPesca"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_espesca" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayMaquinaria"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boton_rojo" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTADISTICAS                              MAQUINARIA"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="12sp"
                            android:textColor="@color/blanco"></TextView>

                        <ImageView
                            android:id="@+id/ivMaquinaria"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_esmaquinaria" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayInsumos"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boton_rojo" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTADISTICAS                                       INSUMOS"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="12sp"
                            android:textColor="@color/blanco"></TextView>

                        <ImageView
                            android:id="@+id/ivInsumos"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_esinsumos" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayPesticidas"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boton_rojo" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTADISTICAS                                   PESTICIDAS"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="12sp"
                            android:textColor="@color/blanco"></TextView>

                        <ImageView
                            android:id="@+id/ivPesticidas"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_espesticidas" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayFertilizantes"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boton_rojo" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTADISTICAS                           FERTILIZANTES"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="12sp"
                            android:textColor="@color/blanco"></TextView>

                        <ImageView
                            android:id="@+id/ivFertilizantes"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_esfertilizantes" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>


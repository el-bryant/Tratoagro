<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aleo_bold"
            android:text="En este apartado te mostraremos las estadÃ­sticas de la demanda y oferta tu mercado digital"
            android:textAlignment="textStart"
            android:textColor="@color/marron1"
            android:textSize="15sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flayGanaderia"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo">

                        <ImageView
                            android:id="@+id/ivGanaderia"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_estaganaderia" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flayPesca"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo">

                        <ImageView
                            android:id="@+id/ivPesca"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_estapesca" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayMaquinaria"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo" >

                        <ImageView
                            android:id="@+id/ivMaquinaria"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_estamaquinaria" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayInsumos"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo" >

                        <ImageView
                            android:id="@+id/ivInsumos"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_estainsumos" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayPesticidas"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo" >

                        <ImageView
                            android:id="@+id/ivPesticidas"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_estapesticidas" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayFertilizantes"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_rojo" >

                        <ImageView
                            android:id="@+id/ivFertilizantes"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_estafertilizantes" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>


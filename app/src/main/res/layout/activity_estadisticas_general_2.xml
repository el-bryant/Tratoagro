<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flayGanaderia"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/boton_categorias2">

                        <TextView
                            android:layout_width="239dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="50dp"
                            android:fontFamily="@font/aleo_bold"
                            android:text="GANADERIA"
                            android:textAlignment="center"
                            android:textColor="@color/dorado"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <ImageView
                            android:id="@+id/ivGanaderia"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="-10dp"
                            android:padding="9dp"
                            android:tint="@color/dorado1"
                            android:src="@drawable/ic_esganaderia" />

                        <ImageView
                            android:id="@+id/ivGanaderiaflecha"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:layout_gravity="end"
                            android:padding="10dp"
                            android:src="@drawable/linea_estadistica_demanda" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flayPesca"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/boton_categorias2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PESCA"
                            android:textAlignment="center"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="70dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="16sp"
                            android:textColor="@color/dorado">

                        </TextView>

                        <ImageView
                        android:id="@+id/ivPesca"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="start"
                        android:padding="9dp"
                        android:tint="@color/dorado1"
                        android:layout_marginTop="-10dp"
                        android:src="@drawable/ic_espesca"/>

                        <ImageView
                            android:id="@+id/ivPescaflecha"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:layout_gravity="end"
                            android:padding="9dp"
                            android:tint="@color/blanco"
                            android:src="@drawable/linea_estadistica_demanda" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayMaquinaria"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/boton_categorias" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MAQUINARIA"
                            android:textAlignment="center"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="16sp"
                            android:textColor="@color/dorado">

                        </TextView>

                        <ImageView
                            android:id="@+id/ivMaquinaria"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="start"
                            android:padding="9dp"
                            android:tint="@color/dorado1"
                            android:layout_marginTop="-10dp"
                            android:src="@drawable/ic_esmaquinaria"/>

                        <ImageView
                            android:id="@+id/ivMaquinariaflecha"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:layout_gravity="end"
                            android:padding="9dp"
                            android:tint="@color/blanco"
                            android:src="@drawable/linea_estadistica_demanda"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayInsumos"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/boton_categorias" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INSUMOS"
                            android:textAlignment="center"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="16sp"
                            android:textColor="@color/dorado">

                        </TextView>

                        <ImageView
                            android:id="@+id/ivInsumos"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:tint="@color/dorado1"
                            android:layout_marginTop="-10dp"
                            android:src="@drawable/ic_esinsumos"/>

                        <ImageView
                            android:id="@+id/ivInsumosflecha"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:layout_gravity="end"
                            android:padding="10dp"
                            android:tint="@color/blanco"
                            android:src="@drawable/linea_estadistica_demanda"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayPesticidas"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/boton_person" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PESTICIDAS"
                            android:textAlignment="center"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="50dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="16sp"
                            android:textColor="@color/dorado">

                        </TextView>

                        <ImageView
                            android:id="@+id/ivPesticidas"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="start"
                            android:padding="9dp"
                            android:tint="@color/dorado1"
                            android:layout_marginTop="-10dp"
                            android:src="@drawable/ic_espesticidas"/>

                        <ImageView
                            android:id="@+id/ivPesticidasflecha"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:layout_gravity="end"
                            android:padding="9dp"
                            android:tint="@color/blanco"
                            android:src="@drawable/linea_estadistica_demanda" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/flayFertilizantes"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/boton_person" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FERTILIZANTES"
                            android:textAlignment="center"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/aleo_bold"
                            android:textSize="16sp"
                            android:textColor="@color/dorado">

                        </TextView>

                        <ImageView
                            android:id="@+id/ivFertilizantes"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:tint="@color/dorado1"
                            android:layout_marginTop="-10dp"
                            android:src="@drawable/ic_esfertilizantes"/>

                        <ImageView
                            android:id="@+id/ivFertilizantesflecha"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:layout_gravity="end"
                            android:padding="9dp"
                            android:tint="@color/blanco"
                            android:src="@drawable/linea_estadistica_demanda" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>


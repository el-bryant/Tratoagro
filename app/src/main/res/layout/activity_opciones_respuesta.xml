<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesRespuestaActivity" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola $Nombre_del_vendedor! Por favor, elige cualquiera de las opciones para contactarlo(a)"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="0dp"
                android:shadowColor="@color/negro"
                android:shadowRadius="5"
                android:layout_marginBottom="30dp" />

            <Button
                android:id="@+id/btnLlamar"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:text="Llamar"
                android:layout_marginStart="90dp"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:drawableBottom="@drawable/ic_baseline_phone_24"
                android:background="@drawable/boton_categorias2"
                android:layout_marginVertical="10dp" />

            <Button
                android:id="@+id/btnMensaje"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:text="Enviar un mensaje"
                android:layout_marginStart="90dp"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:drawableBottom="@drawable/representantelegal"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:background="@drawable/boton_menuprincipal"
                android:layout_marginVertical="10dp" />

            <Button
                android:id="@+id/btnCorreo"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:text="Correo electrÃ³nico"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:layout_marginStart="90dp"
                android:drawableBottom="@drawable/correo1"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:background="@drawable/boton_person"
                android:layout_marginVertical="10dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatosJuridicoActivity"
    android:theme="@style/Material"
    android:background="@color/color20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRA TUS DATOS - PERSONA JURÍDICA"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/blanco"
        android:layout_marginBottom="30dp"
        android:background="@color/marron1"
        android:textSize="20sp"
        android:textAlignment="center"
               />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tus datos en los casilleros presetandos  a continuación"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/hind_medium"
        android:textColor="@color/negro"
        android:layout_marginBottom="20dp"
        android:gravity="start"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RUC"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/empresa1"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:background="@color/marron1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Razón Social"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/empresa1"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:background="@color/marron"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Representante legal"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/representantelegal"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:background="@color/marron1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/marron"
                    android:fontFamily="@font/hind"
                    android:drawableEnd="@drawable/celular1"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:text="Celular"
                    android:textColor="@color/blanco"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/marron1"
                    android:fontFamily="@font/hind"
                    android:drawableEnd="@drawable/celular1"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:text="Domicilio Fiscal"
                    android:textColor="@color/blanco"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/correo1"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:background="@color/marron"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/hind"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ubicacion1"
                    android:drawableTint="@color/color20"
                    android:drawablePadding="10dp"
                    android:background="@color/marron1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnaceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton3"
                android:fontFamily="@font/hind"
                android:text="Siguiente"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
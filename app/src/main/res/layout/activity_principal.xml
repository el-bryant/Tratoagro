<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/machupichu2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/isotipo"
            android:tint="@color/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rojo"
            android:fontFamily="@font/aleo_bold"
            android:gravity="center"
            android:text="Porfavor selecciona cualquiera de las opciones"
            android:textColor="@color/blanco"
            android:textSize="15dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="50dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/llayComprarVender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_ico_recurso_2"
                    android:tint="@color/dorado1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMPRAR o\nVENDER"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayEstadisticas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_estaganaderia2"
                    android:tint="@color/dorado1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESTADÍSTICAS"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/llayCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cerrarsesion"
                    android:tint="@color/dorado1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CERRAR SESIÓN"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ganaderia_noticias" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOTICIAS"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/llayEspacioCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ico_personblack" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESPACIO AL CLIENTE"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayConocenos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ubicacion1"
                    android:tint="@color/dorado1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONÓCENOS MÁS"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
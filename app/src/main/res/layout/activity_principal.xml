<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="2">

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:background_ColorType="gradient_linear"
            app:background_Gradient_Angle="180"
            app:background_Gradient_Color0="#000000"
            app:background_Gradient_ColorEnd="#00000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/isotipo"
            android:tint="@color/dorado1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aleo_bold"
            android:gravity="center"
            android:text="Porfavor selecciona cualquiera de las opciones"
            android:textColor="@color/blanco"
            android:textSize="15sp"
            android:shadowRadius="10"
            android:shadowColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="50dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/llayComprarVender"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_carrito"
                    android:tint="@color/dorado1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comprar o Vender"
                    android:fontFamily="@font/hind"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayEstadisticas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_grafico"
                    android:tint="@color/dorado1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas"
                    android:fontFamily="@font/hind"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/llayCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cerrarsesion"
                    android:tint="@color/dorado1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar sesión"
                    android:fontFamily="@font/hind"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayNoticias"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_campana"
                    android:tint="@color/dorado1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticias"
                    android:fontFamily="@font/hind"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/llayEspacioCliente"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/persona1"
                    android:tint="@color/dorado1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Espacio al cliente"
                    android:fontFamily="@font/hind"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayConocenos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_pregunta"
                    android:tint="@color/dorado1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conócenos más"
                    android:fontFamily="@font/hind"
                    android:textColor="@color/blanco"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
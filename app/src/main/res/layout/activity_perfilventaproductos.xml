<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20" >

    <LinearLayout
        android:id="@+id/llaySeleccionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton3"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" >

        <Button
            android:id="@+id/btnSeleccionarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar producto"
            android:drawableEnd="@drawable/ic_flechaabajo"
            android:drawablePadding="40dp"
            android:drawableTint="@color/blanco"
            android:textColor="@color/blanco"
            android:textAllCaps="false"
            android:background="@null"
            android:textAlignment="textStart"
            android:layout_marginHorizontal="15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ruvcategoriasganaderia"
            android:visibility="gone"
            android:layout_marginBottom="15dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llaySeleccionar"
        android:visibility="gone" />

</RelativeLayout>
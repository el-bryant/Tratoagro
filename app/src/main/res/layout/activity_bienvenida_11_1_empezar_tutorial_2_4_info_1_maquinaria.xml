<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/maquinaria_tratoagro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="170dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="18sp"
        android:textColor="@color/negro"
        android:text="Estimado usuario esta categoría hace referencia a una máquina es un conjunto de elementos móviles y fijos cuyo funcionamiento posibilita aprovechar, dirigir, regular o transformar energía, o realizar un trabajo con un fin determinado."
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:fontFamily="@font/aleo_bold"
        android:id="@+id/btnEstadisticas"
        android:text="Continuar"
        android:drawablePadding="40dp"
        android:drawableTint="@color/blanco"
        android:paddingHorizontal="20dp"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:layout_marginTop="170dp"
        android:background="@drawable/boton_rojo"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material"
    android:background="@mipmap/llama_tratoagro"
    tools:context=".DatosNatural1Activity" >

   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor ingresa tus datos en los casilleros presetandos  a continuación"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/blanco"
        android:layout_marginBottom="20dp"
        android:gravity="start" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp" >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <EditText
                    android:id="@+id/tietDni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DNI"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:drawableTint="@color/blanco"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_ruc"
                    android:drawablePadding="10dp"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <EditText
                    android:id="@+id/tietApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/representantelegal"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/aleo_bold"
                    android:hint="Apellidos"
                    android:drawableTint="@color/blanco"
                    android:inputType="textCapWords"
                    android:textColor="@color/blanco"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <EditText
                    android:id="@+id/tietNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:drawableTint="@color/blanco"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/representantelegal"
                    android:drawablePadding="10dp"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <EditText
                    android:id="@+id/tietCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Celular"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:drawableTint="@color/blanco"
                    android:drawableEnd="@drawable/celular1"
                    android:drawablePadding="10dp"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <EditText
                    android:id="@+id/tietCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    android:textColor="@color/blanco"
                    android:drawableTint="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/correo1"
                    android:drawablePadding="10dp"
                    android:inputType="textEmailAddress" />

             </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <EditText
                    android:id="@+id/tietUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ubicación"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:drawableTint="@color/blanco"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ubicacion1"
                    android:drawablePadding="10dp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:padding="0dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_logo" />

            <Button
                android:id="@+id/btnaceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:background="@drawable/boton3"
                android:textColor="@color/dorado1"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/aleo_bold"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:drawablePadding="10dp"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>
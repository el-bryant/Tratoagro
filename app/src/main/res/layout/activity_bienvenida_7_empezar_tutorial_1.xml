<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/llama_tratoagro"
    tools:context=".Inicio2Activity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/aleo_bold"
        android:text="Te enseñaremos en este espacio lo que tenemos preparado para tí, porfavor dale click a empezar tutorial"
        android:textAlignment="center"
        android:textColor="@color/blanco" />


    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/acvPersonaNatural"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1"
        app:background_ColorType="gradient_sweep"
        app:background_Gradient_Angle="-0"
        app:background_Gradient_Color0="@color/marron1"
        app:background_Gradient_ColorEnd="@color/negro"
        app:cornerRadius="25dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="55dp"
            android:padding="0dp"
            android:src="@drawable/ic_logo"
            android:tint="@color/dorado1"/>

        <LinearLayout
            android:id="@+id/llayIniciarTutorial"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aleo_bold"
                android:gravity="center"
                android:text="EMPEZAR TUTORIAL"
                android:textColor="@color/dorado1"
                android:textSize="30sp" />

        </LinearLayout>

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/aleo_bold"
        android:text="EMPEZAR TUTORIAL"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/marron1" />

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/acvEmpezarTutorial"
        android:layout_width="500dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1"
        android:textAlignment="center"
        app:background_ColorType="gradient_sweep"
        app:background_Gradient_Angle="-990"
        app:background_Gradient_Color0="@color/rojo"
        app:background_Gradient_ColorEnd="@color/negro"
        app:cornerRadius="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:padding="20dp"
            android:tint="@color/dorado1"
            android:src="@drawable/ic_baseline_local_library_24"/>



    </com.sinaseyfi.advancedcardview.AdvancedCardView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/isotipo"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="500dp"
        android:tint="@color/dorado1"></ImageView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20"
    tools:context=".Comprar2Activity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filtrar"
                android:textColor="@color/negro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Tipo de usuario:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvTipoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco" />

                    <TextView
                        android:id="@+id/tvPersonaNatural"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona natural"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPersonaJuridica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona jurídica"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Tipo de comerciante:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvTipoComerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco" />

                    <TextView
                        android:id="@+id/tvMinorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minorista"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMayorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mayorista"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Departamento:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Provincia:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Distrito:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Subcategoría:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Producto:"
                    android:textColor="@color/negro" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botonnegro"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/blanco"
                        android:text="Seleccione"
                        android:textColor="@color/blanco"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Material"
    android:background="@mipmap/machupichu2" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tus datos sociodemográficos en los casilleros presentados  a continuación"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/negro"
        android:layout_marginBottom="20dp"
        android:gravity="start" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de comerciante"
                android:textColor="#5b5e60"
                android:fontFamily="@font/aleo_bold"
                android:textSize="15sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnMayoristaOscuro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mayorista"
                    android:textColor="@color/blanco"
                    android:textAllCaps="false"
                    android:background="@drawable/botonnegro"
                    android:layout_marginHorizontal="5dp" />

                <Button
                    android:id="@+id/btnMayoristaClaro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mayorista"
                    android:textColor="@color/rojo"
                    android:textAllCaps="false"
                    android:background="@drawable/boton_amarillo"
                    android:layout_marginHorizontal="5dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnMinoristaClaro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minorista"
                    android:textColor="@color/rojo"
                    android:textAllCaps="false"
                    android:background="@drawable/boton_amarillo"
                    android:layout_marginHorizontal="5dp" />

                <Button
                    android:id="@+id/btnMinoristaOscuro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minorista"
                    android:textColor="@color/blanco"
                    android:textAllCaps="false"
                    android:background="@drawable/botonnegro"
                    android:layout_marginHorizontal="5dp"
                    android:visibility="gone" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="none"
                android:textColorHint="@color/negro"
                android:layout_marginTop="25dp" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietDepartamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Departameto"
                    android:textColor="@color/negro"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:drawableTint="@color/rojo"
                    android:drawableEnd="@drawable/ic_peru"
                    android:drawablePadding="10dp"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="none"
                android:textColorHint="@color/negro" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Provincia"
                    android:textColor="@color/negro"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:drawableTint="@color/rojo"
                    android:drawableEnd="@drawable/ic_peru"
                    android:drawablePadding="10dp"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="none"
                android:textColorHint="@color/negro" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietDistrito"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:fontFamily="@font/aleo_bold"
                    android:drawableEnd="@drawable/ic_peru"
                    android:drawablePadding="10dp"
                    android:hint="Distrito"
                    android:drawableTint="@color/rojo"
                    android:textColor="@color/negro"
                    android:textSize="15sp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnContinuar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/boton_rojo"
                android:fontFamily="@font/aleo_bold"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="@color/dorado1"
                android:textSize="15sp"
                android:drawablePadding="10dp"/>

             </LinearLayout>

         </ScrollView>

    </LinearLayout>

</FrameLayout>
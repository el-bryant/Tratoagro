<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Material"
    android:gravity="center"
    android:background="@mipmap/machupichu2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor selecciona la categorÃ­a donde quieres ir a vender"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/marron1"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="50dp"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayGanaderia"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivGanaderia"
                        android:layout_width="75dp"
                        android:layout_gravity="center"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_ico_vaca3"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayPesca"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivPesca"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_ico_pez3"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayMaquinaria"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivMaquinaria"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_ico_tractor3"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayInsumos"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"

                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivInsumos"
                        android:layout_width="75dp"
                        android:layout_gravity="center"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_ico_insumos3"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayPesticidas"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivPesticidas"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_ico_pesticidas3"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="40dp"
                android:layout_marginVertical="2dp" >

                <FrameLayout
                    android:id="@+id/flayFertilizantes"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginHorizontal="15dp" >

                    <ImageView
                        android:id="@+id/ivFertilizantes"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_ico_fertelizantes3"
                        android:padding="0dp" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


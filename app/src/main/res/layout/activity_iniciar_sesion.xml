<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatosNatural1Activity"
    android:theme="@style/Material"
    android:background="@color/color20" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO"
            android:background="@color/negro"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/dorado1"
            android:textSize="23.4sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:background="@color/color20"
                    android:textColor="@color/negro"
                    android:drawableEnd="@drawable/correo1"
                    android:drawableTint="@color/negro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/negro"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/negro" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:background="@color/color20"
                    android:drawableTint="@color/negro"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Olvidaste la contraseña"
                android:textAlignment="textEnd"
                android:textColor="@color/negro"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/hind_medium" />

            <Button
                android:id="@+id/btnaceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/boton3"
                android:drawableTop="@drawable/ic_ico_recurso_2"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hind"
                android:text="Entrar"
                android:textAllCaps="false"
                android:textColor="@color/dorado1"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tienes una cuenta "
                    android:textColor="@color/negro"
                    android:fontFamily="@font/hind_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="crear ahora"
                    android:textColor="@color/negro"
                    android:fontFamily="@font/hind_medium" />

            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:padding="0dp"
                android:layout_marginVertical="30dp"
                android:src="@drawable/ic_logo"

        </LinearLayout>

    </ScrollView>

</LinearLayout>
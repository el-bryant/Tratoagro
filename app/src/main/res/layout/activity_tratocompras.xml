<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/llama_tratoagro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aleo_bold"
        android:shadowColor="@color/negro"
        android:text="TRATOCOMPRAS"
        android:textAlignment="center"
        android:textColor="@color/color20"
        android:textSize="23.4sp" />

    <TextView
        android:id="@+id/tvRazonSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/aleo_bold"
        android:text="Podrás encontrar a los usuarios que has comprado sus productos y añadirlos a tu lista de favoritos"
        android:textAlignment="center"
        android:textColor="@color/blanco"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        android:background="@drawable/boton3" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aleo_bold"
                android:text="USUARIO"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_ico_vaca3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:textColor="@color/color20"
                android:gravity="center"
                android:text="COLOCAR MARCA"
                android:fontFamily="@font/aleo_bold"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:drawableTint="@color/color20"
                    android:text="Añadir a Favoritos"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_corazon"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/boton5"
                    android:drawableTint="@color/blanco"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/aleo_bold"
                    android:textAllCaps="false"
                    android:paddingHorizontal="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
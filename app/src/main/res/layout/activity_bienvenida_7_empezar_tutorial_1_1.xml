<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por favor selecciona en cualquier categoría agroindustrial que desees ir"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/negro"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="50dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp" >

                <LinearLayout
                    android:id="@+id/llayGanaderia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:layout_marginHorizontal="15dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GANADERÍA"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginTop="40dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/aleo_bold"
                            android:textColor="@color/blanco"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="textEnd"
                            android:gravity="start" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_gravity="start"
                            android:layout_height="75dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_recortes_ganaderia_1"
                            android:padding="0dp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayPesca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:layout_marginHorizontal="15dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PESCA"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="80dp"
                            android:layout_marginTop="40dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/aleo_bold"
                            android:textColor="@color/blanco"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="textEnd"
                            android:gravity="start" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_recortes_pesca_1_preview_rev_1"
                            android:padding="0dp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayMaquinaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:layout_marginHorizontal="15dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MAQUINARIA"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginTop="40dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/aleo_bold"
                            android:textColor="@color/blanco"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="textEnd"
                            android:gravity="start" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_recortes_maquinaria_1_preview_rev_1"
                            android:padding="0dp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayInsumos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:layout_marginHorizontal="15dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INSUMOS"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="70dp"
                            android:layout_marginTop="40dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/aleo_bold"
                            android:textColor="@color/blanco"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="textEnd"
                            android:gravity="start" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_gravity="start"
                            android:layout_height="75dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_recortes_insumos_1_preview_rev_1"
                            android:padding="0dp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayPesticidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:layout_marginHorizontal="15dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PESTICIDAS"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="55dp"
                            android:layout_marginTop="40dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/aleo_bold"
                            android:textColor="@color/blanco"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="textEnd"
                            android:gravity="start" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_recortes_pesticidas_1_preview_rev_1"
                            android:padding="0dp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayFertilizantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:layout_marginHorizontal="15dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FERTILIZANTES"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginTop="40dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/aleo_bold"
                            android:textColor="@color/blanco"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="textEnd"
                            android:gravity="start" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_recortes_fertilizantes_1_preview_rev_1"
                            android:padding="0dp" />

                    </FrameLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivMenuPrincipal"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:layout_marginStart="110dp"
                    android:src="@drawable/ic_derecha"
                    android:tint="@color/dorado1"
                    android:background="@drawable/boton_rojo"
                    android:layout_gravity="end"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="50dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Te presentamos las 6 categorías agroindustriales que tenemos para tí, porfavor haz click en cualquiera de ellas "
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/negro"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="50dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="40dp" >

                <LinearLayout
                    android:id="@+id/llayGanaderia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_categorias"
                    android:gravity="center"
                    android:layout_marginVertical="3dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_recortes_ganaderia_1"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayPesca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_categorias"
                    android:gravity="center"
                    android:layout_marginVertical="3dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_recortes_pesca_1_preview_rev_1"
                        android:layout_margin="10dp" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayMaquinaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_categorias"
                    android:gravity="center"
                    android:layout_marginVertical="3dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_recortes_maquinaria_1_preview_rev_1"
                        android:layout_margin="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayInsumos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_categorias"
                    android:gravity="center"
                    android:layout_marginVertical="3dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_recortes_insumos_1_preview_rev_1"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayPesticidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_categorias"
                    android:gravity="center"
                    android:layout_marginVertical="3dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_recortes_pesticidas_1_preview_rev_1"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayFertilizantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_categorias"
                    android:gravity="center"
                    android:layout_marginVertical="3dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_recortes_fertilizantes_1_preview_rev_1"
                        android:layout_margin="10dp" />

                </LinearLayout>

<!--                <ImageView-->
<!--                    android:id="@+id/ivContinuar"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:background="@drawable/boton_flecha"-->
<!--                    android:fontFamily="@font/aleo_bold"-->
<!--                    android:padding="12dp"-->
<!--                    android:src="@drawable/ic_derecha"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textColor="@color/color20"-->
<!--                    android:tint="@color/dorado1"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginVertical="20dp" />-->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>


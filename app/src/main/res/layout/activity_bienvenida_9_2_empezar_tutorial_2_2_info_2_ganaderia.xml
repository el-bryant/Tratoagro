<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/negro"
        android:drawableEnd="@drawable/ic_ico_vaca2"
        android:fontFamily="@font/aleo_bold"
        android:shadowColor="@color/negro"
        android:text="CATEGORIA
        GANADERÍA"
        android:textAlignment="center"
        android:textSize="23.4sp"
        android:textColor="@color/color20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/dorado1"
        android:text="SUB CATEGORÍAS Y PRODUCTOS"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:background="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:text="Haz click para ver las diferentes subcategorías de ganadería que puedes comprar"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="textStart"
        android:shadowColor="@color/negro"
        android:layout_marginTop="5dp"
        android:background="@color/color20"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton3"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btseleccionar1"
            android:text="sub cateogorías"
            android:drawableEnd="@drawable/ic_flechaabajo"
            android:drawablePadding="40dp"
            android:fontFamily="@font/aleo_bold"
            android:drawableTint="@color/dorado1"
            android:textColor="@color/dorado1"
            android:textAllCaps="false"
            android:background="@null"
            android:textAlignment="textStart"
            android:layout_marginHorizontal="15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ruvcategoriasganaderia"
            android:visibility="gone"
            android:layout_marginBottom="15dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:text="Haz click para ver los diferentes productos de la subcategorías de ganadería que puedes comprar"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="textStart"
        android:shadowColor="@color/negro"
        android:layout_marginTop="15dp"
        android:background="@color/color20"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton3"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btseleccionar1"
            android:text="productos"
            android:drawableEnd="@drawable/ic_flechaabajo"
            android:drawablePadding="40dp"
            android:fontFamily="@font/aleo_bold"
            android:drawableTint="@color/dorado1"
            android:textColor="@color/dorado1"
            android:textAllCaps="false"
            android:background="@null"
            android:textAlignment="textStart"
            android:layout_marginHorizontal="15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ruvcategoriasganaderia"
            android:visibility="gone"
            android:layout_marginBottom="15dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_logo"

    <Button
        android:id="@+id/btnaceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton3"
        android:fontFamily="@font/aleo_bold"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/dorado1"
        android:textSize="15sp"
        android:drawableTop="@drawable/ic_ico_recurso_2"
        android:drawablePadding="10dp"
        />

</LinearLayout>
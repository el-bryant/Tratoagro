<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Material" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="2">

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:background_ColorType="gradient_linear"
            app:background_Gradient_Angle="180"
            app:background_Gradient_Color0="#80000000"
            app:background_Gradient_ColorEnd="#00000000" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivIsotipo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/isotipo"
        android:tint="@color/dorado1"
        android:transitionName="ivIsotipo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Llena la informaciÃ³n solicitada:"
                    android:textAlignment="center"
                    android:fontFamily="@font/aleo_bold"
                    android:textColor="@color/marron1"
                    android:textSize="18sp"
                    android:layout_margin="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/tvTipoComerciante"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_comerciante"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:fontFamily="@font/aleo_bold"
                            android:gravity="center"
                            android:text="MAYORITA/MINORISTA"
                            android:textColor="@color/blanco" />

                        <TextView
                            android:id="@+id/tvMayorista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mayorista"
                            android:textColor="@color/blanco"
                            android:textAlignment="center"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvMinorista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minorista"
                            android:textColor="@color/blanco"
                            android:textAlignment="center"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/tvDepartamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:drawableStart="@drawable/ic_peru"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:fontFamily="@font/aleo_bold"
                            android:gravity="center"
                            android:text="DEPARTAMENTO"
                            android:textColor="@color/blanco" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDepartamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/tvProvincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:drawableStart="@drawable/ic_peru"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:fontFamily="@font/aleo_bold"
                            android:gravity="center"
                            android:text="PROVINCIA"
                            android:textColor="@color/blanco" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvProvincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_rojo"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/tvDistrito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:drawableStart="@drawable/ic_peru"
                            android:drawableEnd="@drawable/ic_abajo2"
                            android:drawableTint="@color/blanco"
                            android:fontFamily="@font/aleo_bold"
                            android:gravity="center"
                            android:text="DISTRITO"
                            android:textColor="@color/blanco" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDistrito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnContinuar"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/boton_rojo"
                    android:fontFamily="@font/aleo_bold"
                    android:textAllCaps="false"
                    android:drawableBottom="@drawable/ic_derecha"
                    android:drawableTint="@color/dorado1"
                    android:textColor="@color/dorado1"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="50dp"
                    android:layout_marginBottom="50dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
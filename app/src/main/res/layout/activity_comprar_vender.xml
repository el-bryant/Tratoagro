<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/llama_tratoagro" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor seleccione una de las opciones"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/blanco"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:shadowColor="@color/negro"
        android:layout_marginTop="45dp"
        android:id="@+id/subtitulo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:orientation="vertical" >

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:id="@+id/acvComprar"
                android:layout_width="250dp"
                android:layout_height="285dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:background_ColorType="solid"
                app:background_Color="#00000000"
                app:cornerRadius="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginVertical="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COMPRAR"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:background="@color/rojo"
                        android:gravity="center"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_ico_carrito2" />

                </LinearLayout>

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:id="@+id/acvVender"
                android:layout_width="250dp"
                android:layout_height="285dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:background_ColorType="solid"
                app:background_Color="#00000000"
                app:cornerRadius="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/rojo"
                        android:fontFamily="@font/aleo_bold"
                        android:text="VENDER"
                        android:textAlignment="center"
                        android:textColor="@color/blanco" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_ico_dolar2" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_logo"
                        android:tint="@color/dorado1" />


                </LinearLayout>

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color20" >

    <TextView
        android:id="@+id/tvCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesiÃ³n"
        android:fontFamily="@font/hind"
        android:textSize="15sp"
        android:drawablePadding="15dp"
        android:textColor="@color/negro"
        android:drawableTint="@color/negro"
        android:textAlignment="textEnd"
        android:drawableEnd="@drawable/ic_power"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/tvRazonSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/marron1"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:textSize="23.4sp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/color2">

                <ImageView
                    android:id="@+id/ivFotoProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/ivAgregar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/redondo_blanco"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_agregar"
                    android:tint="@color/color2" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botonnegro"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llaySubcategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botonnegro"
                android:visibility="gone"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubcategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botonnegro"
                android:visibility="gone"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio:"
                android:inputType="numberDecimal"
                android:fontFamily="@font/hind_semibold"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="100dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:textSize="18sp"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:textAllCaps="false"
                android:background="@drawable/botonnegro"
                android:layout_marginHorizontal="70dp"
                android:layout_marginVertical="10dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

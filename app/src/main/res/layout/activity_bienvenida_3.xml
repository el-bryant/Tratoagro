<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:background_ColorType="gradient_radial"
        app:background_Gradient_Color0="#80000000"
        app:background_Gradient_ColorEnd="#00000000"  />

    <ImageView
        android:id="@+id/ivIsotipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/isotipo"
        android:tint="@color/logo"
        android:transitionName="ivIsotipo" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/boton_rojo"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="@color/color20"
        android:textSize="15sp"
        android:fontFamily="@font/aleo_bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:paddingHorizontal="50dp" />

</RelativeLayout>
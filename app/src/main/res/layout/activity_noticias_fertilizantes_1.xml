<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/fertilizantes2_tratoagro" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <FrameLayout
                android:id="@+id/flayNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_categorias"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticias"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="center"
                    android:layout_margin="15dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flayRevistas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_categorias"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Revistas"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="center"
                    android:layout_margin="15dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flayPublicidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_categorias"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publicidad"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="center"
                    android:layout_margin="15dp" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
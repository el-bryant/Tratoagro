<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/ivFondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="2">

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:background_ColorType="gradient_linear"
            app:background_Gradient_Angle="360"
            app:background_Gradient_Color0="#65000000"
            app:background_Gradient_ColorEnd="#00000000" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Porfavor seleccione una de las opciones"
                android:fontFamily="@font/aleo_bold"
                android:textSize="13sp"
                android:textColor="@color/blanco"
                android:shadowColor="@color/negro"
                android:textAlignment="center"
                android:layout_marginHorizontal="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="50dp" >

                <FrameLayout
                    android:id="@+id/flayPersonaNatural"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/boton_categorias2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERSONA NATURAL"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/dorado"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/ic_persona_natural_new"
                        android:drawableTint="@color/dorado"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flayPersonaJuridica"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/boton_registrarse"
                    android:layout_marginTop="30dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERSONA JURÍDICA"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/dorado"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/ic_empresa_new"
                        android:drawableTint="@color/dorado"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

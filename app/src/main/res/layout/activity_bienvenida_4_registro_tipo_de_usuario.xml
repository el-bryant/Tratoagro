<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/llama_tratoagro" >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor seleccione una de las opciones."
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/blanco"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:shadowColor="@color/negro"
        android:layout_marginTop="45dp"
        android:id="@+id/subtitulo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERSONA NATURAL"
                android:fontFamily="@font/aleo_bold"
                android:background="@color/rojo"
                android:textSize="15sp"
                android:textColor="@color/blanco"
                android:textAlignment="center"
                android:layout_marginHorizontal="30dp"
                android:shadowColor="@color/negro"
                android:layout_marginTop="10dp"
                android:id="@+id/subtitulo" />

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:id="@+id/acvPersonaNatural"
                android:layout_width="345dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:background_ColorType="gradient_sweep"
                app:background_Gradient_Angle="90"
                app:background_Gradient_Color0=""
                app:background_Gradient_ColorEnd="@color/negro"
                app:cornerRadius="1dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginVertical="15dp" >

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:padding="20dp"
                        android:src="@drawable/ico_personblack" />



                </LinearLayout>

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERSONA JURÍDICA"
                android:fontFamily="@font/aleo_bold"
                android:textSize="15sp"
                android:background="@color/rojo"
                android:textColor="@color/blanco"
                android:textAlignment="center"
                android:layout_marginHorizontal="30dp"
                android:shadowColor="@color/negro"
                android:layout_marginTop="50dp"
                android:id="@+id/subtitulo" />

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:id="@+id/acvPersonaJuridica"
                    android:layout_width="345dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    app:background_ColorType="gradient_sweep"
                    app:background_Gradient_Angle="90"
                    app:background_Gradient_Color0=""
                    app:background_Gradient_ColorEnd="@color/negro"
                    app:cornerRadius="85dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginVertical="15dp" >

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            android:padding="20dp"
                            android:src="@drawable/ic_empresablack" />


                    </LinearLayout>

                </com.sinaseyfi.advancedcardview.AdvancedCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/aleo_bold"
        android:shadowColor="@color/negro"
        android:text="TIPO DE USUARIO"
        android:textAlignment="center"
        android:textSize="23.4sp"
        android:textColor="@color/dorado1"
        android:background="@color/negro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor seleccione una de las opciones."
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:shadowColor="@color/negro"
        android:layout_marginTop="15dp"
        android:id="@+id/subtitulo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:id="@+id/acvPersonaNatural"
                android:layout_width="250dp"
                android:layout_height="285dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:background_ColorType="gradient_sweep"
                app:background_Gradient_Angle="-180"
                app:background_Gradient_Color0="@color/marron1"
                app:background_Gradient_ColorEnd="@color/negro"
                app:cornerRadius="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginVertical="15dp" >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:padding="20dp"
                        android:src="@drawable/ico_personblack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PERSONA NATURAL"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/dorado1"
                        android:gravity="center"
                        android:textSize="20sp"
                        />



                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_logo2" />

                </LinearLayout>

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:id="@+id/acvPersonaJuridica"
                    android:layout_width="250dp"
                    android:layout_height="285dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    app:background_ColorType="gradient_sweep"
                    app:background_Gradient_Angle="-180"
                    app:background_Gradient_Color0="@color/marron1"
                    app:background_Gradient_ColorEnd="@color/negro"
                    app:cornerRadius="25dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="15dp" >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:padding="20dp"
                            android:src="@drawable/ic_empresablack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PERSONA JURÍDICA"
                            android:textColor="@color/dorado1"
                            android:fontFamily="@font/aleo_bold"
                            android:textAlignment="center"
                            android:textSize="20sp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:padding="0dp"
                            android:src="@drawable/ic_logo2" />

                    </LinearLayout>

                </com.sinaseyfi.advancedcardview.AdvancedCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/insumos2_tratoagro"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llayVideos" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_menuprincipal"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="15dp"
                    app:cornerRadius="25dp" >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/insumos2_tratoagro"
                        android:scaleType="centerCrop" />

                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticia 01"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="start|center_vertical"
                    android:layout_margin="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_menuprincipal"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="15dp"
                    app:cornerRadius="25dp" >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/insumos2_tratoagro"
                        android:scaleType="centerCrop" />

                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticia 02"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="start|center_vertical"
                    android:layout_margin="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_menuprincipal"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="15dp"
                    app:cornerRadius="25dp" >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/insumos2_tratoagro"
                        android:scaleType="centerCrop" />

                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticia 03"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="start|center_vertical"
                    android:layout_margin="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_menuprincipal"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp" >

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="15dp"
                    app:cornerRadius="25dp" >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/insumos2_tratoagro"
                        android:scaleType="centerCrop" />

                </com.sinaseyfi.advancedcardview.AdvancedCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticia 04"
                    android:fontFamily="@font/aleo_bold"
                    android:textSize="25sp"
                    android:textColor="@color/blanco"
                    android:gravity="start|center_vertical"
                    android:layout_margin="15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llayVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" >

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/ytpvVideo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:videoId="sdfYu8HgCss" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/ytpvVideo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp" />

    </LinearLayout>

</RelativeLayout>
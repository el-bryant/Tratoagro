<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20"
    tools:context=".Inicio2Activity" >

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/acvPersonaNatural"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        app:background_ColorType="gradient_sweep"
        app:background_Gradient_Angle="-0"
        app:background_Gradient_Color0="@color/negro"
        app:background_Gradient_ColorEnd="@color/negro"
        app:cornerRadius="25dp" >

        <LinearLayout
            android:id="@+id/llayIniciarTutorial"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="15dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empezar tutorial"
                android:fontFamily="@font/aleo_bold"
                android:textColor="@color/blanco"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@color/marron1" />

        </LinearLayout>

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

</RelativeLayout>
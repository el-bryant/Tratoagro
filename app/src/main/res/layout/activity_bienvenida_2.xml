<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/machupichu2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TratoAgro te da la bienvenida!. Estamos muy contentos que nos hayas elegido, en este espacio podrás comprar o vender lo que tu quieras, además ver estádisticas de la demanda de cada producto en tiempo real. Así mismo un espacio publicitario para un mayor impacto visual del producto que quieres comprar o vender. Todo ello lo podrás hacer en las 6 categorías que tenemos para tí del sector AgroIndustrial. Dejanos mostrarte como usar esta App diseñada para tí.  "
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/marron1"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="115dp"
            android:layout_marginHorizontal="50dp"/>



        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/boton6"
            android:fontFamily="@font/aleo_bold"
            android:textAlignment="center"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="@color/color20"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            />

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/color20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/color20"
        android:gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="-50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aleo_bold"
            android:text="BIENVENIDOS"
            android:textColor="@color/marron1"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:background="@color/dorado1"
            android:drawableEnd="@drawable/ic_idea"
            android:layout_marginHorizontal="50dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TratoAgro te da la bienvenida a este espacio virtual donde podras descubrir en diversas categorias que tenemos para ti del sector agroindustrial, comprar o vender los productos que tu quieras, ver estadisticas de la demanda del producto que desees, además de tener tu propia cartera de contactos mayoristas o minoristas, elegir las noticias y revistas sobre el sector que elijas,  estamos muy contentos que nos hayas elegido, dejanos mostrarte como usar esta App diseñada para tí.  "
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/marron1"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:background="@color/dorado1"
            android:layout_marginHorizontal="50dp"/>



        <Button
            android:id="@+id/btnaceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/boton3"
            android:fontFamily="@font/aleo_bold"
            android:textAlignment="center"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="@color/dorado1"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_ico_recurso_2"
            android:drawablePadding="10dp"
            />
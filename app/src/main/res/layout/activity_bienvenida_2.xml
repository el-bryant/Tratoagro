<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:background_ColorType="gradient_linear"
        app:background_Gradient_Angle="360"
        app:background_Gradient_Color0="#99000000"
        app:background_Gradient_ColorEnd="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/ivIsotipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/isotipo"
            android:tint="@color/dorado1"
            android:transitionName="ivIsotipo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TratoAgro es una app exclusiva para el sector agroindustrial. Abarcamos 6 categorías, tales como la ganadería, la pesca, los pesticidas, los fertilizantes, los insumos y la maquinaria. Dejanos mostrarte lo que tenemos preparado para tí! "
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAlignment="center"
            android:shadowColor="@color/negro"
            android:shadowRadius="10"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"/>

        <ImageView
            android:id="@+id/ivContinuar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/boton_flecha"
            android:fontFamily="@font/aleo_bold"
            android:padding="12dp"
            android:src="@drawable/ic_derecha"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/color20"
            android:tint="@color/dorado1"
            android:layout_marginTop="120dp" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/llama_tratoagro"
    tools:context=".Comprar2Activity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ESPACIO AL CLIENTE"
                android:fontFamily="@font/aleo_bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/color20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Porfavor selecciona las siguientes para que puedas encontrar con mayor facilidad lo que buscas"
                android:fontFamily="@font/aleo_bold"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:layout_marginTop="11.5dp"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvEditarmiperfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:gravity="center"
                        android:text="EDITAR MI PERFIL"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/color20"
                        android:paddingStart="10dp"
                        android:drawableEnd="@drawable/persona1"/>

                    <TextView
                        android:id="@+id/tvPersonaNatural"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona natural"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPersonaJuridica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona jurÃ­dica"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvMistratocompras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:text="MIS TRATOCOMPRAS"
                        android:gravity="center"
                        android:textColor="@color/color20"
                        android:paddingStart="10dp"
                        android:drawableEnd="@drawable/ic_carrito"/>

                    <TextView
                        android:id="@+id/tvMinorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minorista"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMayorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mayorista"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvMistratoventas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:text="MIS TRATOVENTAS"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:gravity="center"
                        android:textColor="@color/color20"
                        android:layout_marginHorizontal="15dp"
                        android:drawableEnd="@drawable/ic_dolar"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvPublicaranuncio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:text="MIS TRATOANUNCIOS"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:gravity="center"
                        android:drawableEnd="@drawable/ic_noticias2"
                        android:textColor="@color/color20"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvContactosfavoritos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:text="CONTACTOS FAVORITOS"
                        android:gravity="center"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:textColor="@color/color20"
                        android:drawableEnd="@drawable/ic_me_gusta"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvDenunciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:text="DENUNCIAR"
                        android:gravity="center"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:textColor="@color/color20"
                        android:layout_marginHorizontal="15dp"
                        android:drawableEnd="@drawable/ic_bandera"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton7"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvDesactivarmicuenta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/blanco"
                        android:text="DESACTIVAR MI CUENTA"
                        android:fontFamily="@font/aleo_bold"
                        android:drawableEnd="@drawable/ic_deslizar_hacia_abajo"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:textColor="@color/color20"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:padding="0dp"
                android:src="@drawable/ic_logo" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
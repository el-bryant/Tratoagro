<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatosNatural1Activity"
    android:theme="@style/Material"
    android:background="@mipmap/machupichu2"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UBÍCANOS"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/marron1"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:drawableEnd="@drawable/ic_ubicanos"
            android:drawableTint="@color/marron1"
            />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/aleo_bold"
                 android:textSize="15sp"
                 android:textColor="@color/marron1"
                 android:text="Haz click en cualquiera de las redes sociales, y síguenos, te esperamos!"
                 android:layout_marginHorizontal="30dp"
                 android:textAlignment="textStart"
                 android:shadowColor="@color/negro"
                 android:layout_marginTop="30dp"
                 android:layout_marginVertical="15dp"/>

             <Button
                 android:id="@+id/btnFacebook"
                 android:layout_width="340dp"
                 android:layout_height="90dp"
                 android:layout_marginHorizontal="3dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/boton_rojo"
                 android:fontFamily="@font/aleo_bold"
                 android:text="/tratoagro.tratoagro/"
                 android:drawableStart="@drawable/ic_facebook"
                 android:textAllCaps="false"
                 android:textColor="@color/blanco"
                 android:textSize="20sp"
                 />

             <Button
                 android:layout_width="340dp"
                 android:layout_height="90dp"
                 android:text="/tratoagro/"
                 android:background="@drawable/boton_rojo"
                 android:textColor="@color/blanco"
                 android:layout_marginTop="10dp"
                 android:layout_marginHorizontal="3dp"
                 android:fontFamily="@font/aleo_bold"
                 android:textSize="20sp"
                 android:textAllCaps="false"
                 android:id="@+id/btnInstagram"
                 android:drawableStart="@drawable/ic_instagram__1_"

                 />

             <Button
                 android:layout_width="340dp"
                 android:layout_height="90dp"
                 android:text="tratoagro2021@gmail.com"
                 android:background="@drawable/boton_rojo"
                 android:textColor="@color/blanco"
                 android:layout_marginTop="10dp"
                 android:layout_marginHorizontal="3dp"
                 android:fontFamily="@font/aleo_bold"
                 android:textSize="20sp"
                 android:textAllCaps="false"
                 android:id="@+id/btnGmail"
                 android:drawableStart="@drawable/ic_google"
                 />

         </LinearLayout>
    </ScrollView>
</LinearLayout>
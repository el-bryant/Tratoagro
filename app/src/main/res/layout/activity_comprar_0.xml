<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/llama_tratoagro" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="En esta sección, te enseñaremos como comprar lo que tu quieras en cualquier categoría que tenemos para tí"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/blanco"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:shadowColor="@color/negro"
        android:layout_marginTop="50dp"
        android:id="@+id/subtitulo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="60dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:orientation="vertical" >

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:id="@+id/acvComprar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:background_ColorType="gradient_sweep"
                app:background_Gradient_Angle="90"
                app:background_Gradient_Color0=""
                app:background_Gradient_ColorEnd="@color/negro"
                app:cornerRadius="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginVertical="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COMPRAR"
                        android:fontFamily="@font/aleo_bold"
                        android:background="@color/rojo"
                        android:textColor="@color/blanco"
                        android:gravity="center"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_ico_carrito2" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_logo2" />
                </LinearLayout>

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

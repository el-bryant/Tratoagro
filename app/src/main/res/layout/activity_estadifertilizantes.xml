<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESTADÍSTICAS FERTILIZANTES"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/color20"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:background="@color/negro"
        android:layout_marginTop="50dp"
        android:textSize="23.4sp"
        android:drawableEnd="@drawable/ic_estafertilizantes"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/dorado1"
        android:text="DESCRIPCION"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:background="@color/negro"
        android:layout_marginVertical="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:text="En este apartado  te mostraremos las fluctuaciones de la demanda"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="textStart"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bchVentas"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_logo"
</LinearLayout>

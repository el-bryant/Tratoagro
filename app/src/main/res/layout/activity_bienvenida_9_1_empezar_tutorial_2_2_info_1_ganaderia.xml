<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/negro"
        android:drawableEnd="@drawable/ic_ico_vaca2"
        android:fontFamily="@font/aleo_bold"
        android:shadowColor="@color/negro"
        android:text="CATEGORIA
         GANADERÍA"
        android:textAlignment="center"
        android:textSize="23.4sp"
        android:textColor="@color/color20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/dorado1"
        android:text="DESCRIPCIÓN"
        android:background="@color/negro"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:text="Estimado usuario esta categoría hace referencia en la cría de animales domésticos para el consumo humano y la obtención de carne, leche, lana, pieles, miel entre otros."
        android:layout_marginHorizontal="30dp"
        android:textAlignment="textStart"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/negro"
        android:text="Haz click para ir"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="50dp"
        android:background="@color/color20"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btseleccionar1"
        android:text="ESTADÍSTICAS"
        android:drawableEnd="@drawable/ic_estaganaderia"
        android:drawablePadding="40dp"
        android:drawableTint="@color/dorado1"
        android:paddingHorizontal="40dp"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton3"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btseleccionar1"
        android:text="NOTICIAS"
        android:drawableEnd="@drawable/ic_noticias"
        android:drawablePadding="40dp"
        android:drawableTint="@color/dorado1"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton3"
        android:textAlignment="center"
        android:paddingHorizontal="40dp"
        android:layout_marginHorizontal="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btseleccionar1"
        android:text="MENU PRINCIPAL"
        android:drawableEnd="@drawable/ic_ico_recurso_3"
        android:drawablePadding="40dp"
        android:drawableTint="@color/dorado1"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton3"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_logo"


</LinearLayout>
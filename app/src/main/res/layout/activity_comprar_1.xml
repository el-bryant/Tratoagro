<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="2">

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:background_ColorType="gradient_linear"
            app:background_Gradient_Angle="180"
            app:background_Gradient_Color0="#80000000"
            app:background_Gradient_ColorEnd="#00000000" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivIsotipo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/isotipo"
        android:tint="@color/dorado1"
        android:transitionName="ivIsotipo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por favor, seleccione una de las categorías:"
            android:fontFamily="@font/aleo_bold"
            android:textSize="18sp"
            android:textColor="@color/blanco"
            android:shadowColor="@color/negro"
            android:shadowRadius="10"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp" >

                <LinearLayout
                    android:id="@+id/llayGanaderia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_rojo"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp">

                    <ImageView
                        android:id="@+id/ivGanaderia"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_recortes_ganaderia_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ganadería"
                        android:textSize="15sp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:textAlignment="textEnd"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayPesca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_rojo"
                    android:gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp" >

                    <ImageView
                        android:id="@+id/ivPesca"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_recortes_pesca_1_preview_rev_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pesca"
                        android:textSize="15sp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:textAlignment="textEnd"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayMaquinaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_rojo"
                    android:gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp" >

                    <ImageView
                        android:id="@+id/ivMaquinaria"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_recortes_maquinaria_1_preview_rev_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maquinaria"
                        android:textSize="15sp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:textAlignment="textEnd"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayInsumos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_rojo"
                    android:gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp" >

                    <ImageView
                        android:id="@+id/ivInsumos"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_recortes_insumos_1_preview_rev_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Insumos"
                        android:textSize="15sp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:textAlignment="textEnd"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayPesticidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp" >

                    <ImageView
                        android:id="@+id/ivPesticidas"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_recortes_pesticidas_1_preview_rev_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pesticidas"
                        android:textSize="15sp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:textAlignment="textEnd"
                        android:layout_margin="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayFertilizantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boton_rojo"
                    android:gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp" >

                    <ImageView
                        android:id="@+id/ivFertilizantes"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_recortes_fertilizantes_1_preview_rev_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fertilizantes"
                        android:textSize="15sp"
                        android:fontFamily="@font/aleo_bold"
                        android:textColor="@color/blanco"
                        android:textAlignment="textEnd"
                        android:layout_margin="10dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/aleo_bold"
            android:shadowColor="@color/negro"
            android:shadowRadius="10"
            android:text="Haz click para ver las diferentes subcategorías de insumos que puedes comprar"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonnegro"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp" >

            <Button
                android:id="@+id/btnSubcategoriasInsumos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBCATEGORÍAS"
                android:drawableEnd="@drawable/ic_abajo"
                android:drawablePadding="40dp"
                android:fontFamily="@font/aleo_bold"
                android:drawableTint="@color/dorado1"
                android:textColor="@color/blanco"
                android:textAllCaps="false"
                android:background="@null"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="15dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubcategoriasInsumos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonnegro"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp" >

            <Button
                android:id="@+id/btnProductosInsumos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRODUCTOS"
                android:drawableEnd="@drawable/ic_abajo"
                android:drawablePadding="40dp"
                android:drawableTint="@color/blanco"
                android:textColor="@color/blanco"
                android:textAllCaps="false"
                android:fontFamily="@font/aleo_bold"
                android:background="@null"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="15dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductosInsumos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/boton_rojo"
            android:fontFamily="@font/aleo_bold"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@color/dorado1"
            android:textSize="15sp"
            android:paddingHorizontal="50dp" />

    </LinearLayout>

</FrameLayout>
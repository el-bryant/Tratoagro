<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pesticidas5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:shadowColor="@color/negro"
        android:layout_marginEnd="170dp"
        android:layout_marginTop="50dp"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="18sp"
        android:textColor="@color/negro"
        android:text="Estimado usuario esta categoría hace referencia un plaguicida o pesticida, es cualquier sustancia destinada a prevenir, destruir, atraer, repeler o combatir cualquier plaga, incluidas las especies indeseadas de plantas o animales, durante la producción, almacenamiento, transporte, distribución y elaboración de alimentos, productos agrícolas o alimentos para animales, o que pueda administrarse a los animales para combatir ectoparásitos."
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:fontFamily="@font/aleo_bold"
        android:id="@+id/btnEstadisticas"
        android:text="Continuar"
        android:drawablePadding="40dp"
        android:drawableTint="@color/blanco"
        android:paddingHorizontal="20dp"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:layout_marginTop="170dp"
        android:background="@drawable/boton_rojo"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comprar2Activity" >

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="30dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvTipoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/representantelegal"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text="TIPO DE USUARIO"
                        android:textColor="@color/blanco" />

                    <TextView
                        android:id="@+id/tvPersonaNatural"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona natural"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPersonaJuridica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona jurÃ­dica"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvTipoComerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_comerciante"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text="MAYORITA/MINORISTA"
                        android:textColor="@color/blanco" />

                    <TextView
                        android:id="@+id/tvMayorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mayorista"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMinorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minorista"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableStart="@drawable/ic_peru"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text="DEPARTAMENTO"
                        android:textColor="@color/blanco" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableStart="@drawable/ic_peru"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text="PROVINCIA"
                        android:textColor="@color/blanco" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableStart="@drawable/ic_peru"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text="DISTRITO"
                        android:textColor="@color/blanco" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableStart="@drawable/ic_ico_recurso_2"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text="  SUBCATEGORIA"
                        android:textColor="@color/blanco" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginHorizontal="15dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_rojo"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableStart="@drawable/ic_ico_recurso_2"
                        android:drawableEnd="@drawable/ic_abajo2"
                        android:drawableTint="@color/blanco"
                        android:fontFamily="@font/aleo_bold"
                        android:gravity="center"
                        android:text=" PRODUCTO"
                        android:textColor="@color/blanco" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginHorizontal="15dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSiguiente"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_derecha"
                android:tint="@color/dorado1"
                android:background="@drawable/boton_rojo"
                android:layout_gravity="end"
                android:layout_marginEnd="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
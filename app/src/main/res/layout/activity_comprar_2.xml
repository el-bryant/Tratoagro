<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color20"
    tools:context=".Comprar2Activity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FILTRO"
                android:fontFamily="@font/aleo_bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@color/negro"
                android:textColor="@color/dorado1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Porfavor selecciona las siguientes para que puedas encontrar con mayor facilidad lo que buscas"
                android:fontFamily="@font/aleo_bold"
                android:textSize="13sp"
                android:textColor="@color/negro"
                android:layout_marginTop="11.5dp"
                android:textAlignment="textStart"

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvTipoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:text="TIPO DE USUARIO"
                        android:fontFamily="@font/aleo_bold"
                        android:drawableStart="@drawable/representantelegal"
                        android:textColor="@color/dorado1"
                        android:paddingStart="10dp"/>

                    <TextView
                        android:id="@+id/tvPersonaNatural"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona natural"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPersonaJuridica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persona jurÃ­dica"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvTipoComerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:fontFamily="@font/aleo_bold"
                        android:text="MAYORITA/MINORISTA"
                        android:drawableStart="@drawable/ic_comerciante"
                        android:textColor="@color/dorado1"
                        android:paddingStart="10dp"/>

                    <TextView
                        android:id="@+id/tvMayorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mayorista"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMinorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minorista"
                        android:textColor="@color/blanco"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:text="DEPARTAMENTO"
                        android:fontFamily="@font/aleo_bold"
                        android:drawableStart="@drawable/ic_peru"
                        android:paddingStart="10dp"
                        android:textColor="@color/dorado1"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:text="PROVINCIA"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:drawableStart="@drawable/ic_peru"
                        android:textColor="@color/dorado1"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:text="DISTRITO"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:drawableStart="@drawable/ic_peru"
                        android:textColor="@color/dorado1"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDistrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:text="  SUBCATEGORIA"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:drawableStart="@drawable/ic_ico_recurso_2"
                        android:textColor="@color/dorado1"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubcategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton3"
                    android:orientation="vertical"
                    android:paddingVertical="10dp" >

                    <TextView
                        android:id="@+id/tvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_abajo"
                        android:drawableTint="@color/dorado1"
                        android:text=" PRODUCTO"
                        android:fontFamily="@font/aleo_bold"
                        android:paddingStart="10dp"
                        android:drawableStart="@drawable/ic_ico_recurso_1"
                        android:textColor="@color/dorado1"
                        android:layout_marginHorizontal="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:padding="0dp"
                android:src="@drawable/ic_logo"

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
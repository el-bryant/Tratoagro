<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/insumos4_tratoagro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CATEGORÍA INSUMOS"
        android:fontFamily="@font/aleo_bold"
        android:textColor="@color/color20"
        android:layout_marginHorizontal="30dp"
        android:textSize="23.4sp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="50dp"
        android:drawableEnd="@drawable/ic_ico_insumos2"/>

    <TextView
        android:layout_width="411dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/blanco"
        android:text="DESCRIPCIÓN"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:background="@color/rojo"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/blanco"
        android:text="Estimado usuario esta categoría hace referencia al insumo, que es toda aquella cosa susceptible de dar servicio y paliar necesidades del ser humano, es decir, nos referimos a todas las materias primas que son utilizadas para producir nuevos elementos."
        android:layout_marginHorizontal="30dp"
        android:textAlignment="textStart"
        android:shadowColor="@color/negro"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo_bold"
        android:textSize="15sp"
        android:textColor="@color/color20"
        android:text="Haz click para ir"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:shadowColor="@color/negro"
        android:layout_marginTop="50dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/aleo_bold"
        android:id="@+id/btnEstadisticas"
        android:text="ESTADISTICAS"
        android:drawableEnd="@drawable/ic_estainsumos2"
        android:drawablePadding="40dp"
        android:drawableTint="@color/blanco"
        android:paddingHorizontal="20dp"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton3"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/aleo_bold"
        android:id="@+id/btnNoticias"
        android:text="NOTICIAS"
        android:drawableEnd="@drawable/ic_noticias2"
        android:drawablePadding="40dp"
        android:drawableTint="@color/blanco"
        android:textColor="@color/dorado1"
        android:paddingHorizontal="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton3"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/aleo_bold"
        android:id="@+id/btnMenu"
        android:text="MENU PRINCIPAL"
        android:drawableEnd="@drawable/ic_ico_recurso_3"
        android:drawablePadding="40dp"
        android:drawableTint="@color/blanco"
        android:textColor="@color/dorado1"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton3"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_logo" />

</LinearLayout>